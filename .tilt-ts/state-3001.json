{
  "docker": {
    "registry": "localhost:36269"
  },
  "k8s": {
    "context": "k3d-ecosys-local-dev",
    "namespace": "eco_test"
  },
  "docker_build": {
    "ecosystem/nginx": [
      "ecosystem/nginx",
      {
        "context": "./example",
        "src": [
          "Dockerfile"
        ]
      },
      {
        "ignore": [],
        "live_update": [
          {
            "type": "sync",
            "src": "example/*",
            "dest": "/usr/share/nginx/html"
          }
        ]
      }
    ],
    "ecosystem/app-test": [
      "ecosystem/app-test",
      {
        "context": "./example",
        "src": [
          "Dockerfile"
        ]
      },
      {
        "ignore": [],
        "live_update": [
          {
            "type": "sync",
            "src": "src/*",
            "dest": "/app/src"
          },
          {
            "type": "run",
            "path": "bun install",
            "options": {
              "trigger": [
                "package.json"
              ]
            }
          }
        ]
      }
    ]
  },
  "k8s_yaml": {
    "./example": [
      "./example"
    ]
  }
}