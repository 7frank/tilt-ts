{
  "docker": {
    "registry": "localhost:5000"
  },
  "k8s": {
    "context": "k3d-ecosys-local-dev  ",
    "namespace": "eco_test"
  },
  "docker_build": {
    "ecosystem/dashie": [
      "ecosystem/dashie",
      {
        "context": ".",
        "src": [
          "Dockerfile"
        ]
      },
      {
        "ignore": [],
        "live_update": [
          {
            "type": "sync",
            "src": "src/*",
            "dest": "/app/src"
          },
          {
            "type": "run",
            "path": "bun install",
            "options": {
              "trigger": [
                "package.json"
              ]
            }
          }
        ]
      }
    ]
  }
}